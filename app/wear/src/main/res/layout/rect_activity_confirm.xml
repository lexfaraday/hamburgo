<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:deviceIds="wear_square">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_amount"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="5dp"
        android:password="false"
        android:phoneNumber="false"
        android:text="@string/confirm_reservation"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="normal"
        android:visibility="visible"
        android:textAlignment="center" />


    <android.support.wearable.view.DelayedConfirmationView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/delayed_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:src="@drawable/ok"
        app:circle_border_color="@color/blue"
        app:circle_border_width="4dip"
        app:circle_color="#76eacd"
        app:circle_radius="38dip"
        app:circle_radius_pressed="38dip"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="4dp" />

    <ImageButton
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:focusable="false"
        android:onClick="btnCancel"
        android:src="@drawable/cancel" />


</FrameLayout>
