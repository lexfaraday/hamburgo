<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wearable.hotelbeds.traveler.ConfirmActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />


        <RelativeLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/card"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/default_event" />

            <ImageView
                android:id="@+id/separador"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_below="@+id/eventImage"
                android:layout_marginBottom="5dp"
                android:background="@color/black_info" />

            <ImageView
                android:id="@+id/imageprice"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/separador"
                android:layout_gravity="center"
                android:src="@drawable/price" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separador"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@+id/imageprice"
                android:text="20 â‚¬"
                android:textColor="#404040"
                android:textSize="@dimen/text_size" />


            <ImageView
                android:id="@+id/imagecalendar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/price"
                android:layout_gravity="center"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/calendario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@+id/imagecalendar"
                android:text="16/10/2015 - 17/10/2015"
                android:textColor="#404040"
                android:textSize="@dimen/text_size" />


            <ImageView
                android:id="@+id/imagestars"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/calendario"
                android:layout_gravity="center"
                android:src="@drawable/hotel" />

            <TextView
                android:id="@+id/hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calendario"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@+id/imagestars"
                android:text="Hilton Palas DBL-ST *****"
                android:textColor="#404040"
                android:textSize="@dimen/text_size" />


            <ImageView
                android:id="@+id/imagetakein"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/hotel"
                android:layout_gravity="center"
                android:src="@drawable/airplane_takeoff" />

            <TextView
                android:id="@+id/takein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hotel"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/imagetakein"
                android:text="Air Berlin 16/10/2015 06:40"
                android:textColor="#404040"
                android:textSize="@dimen/text_size" />

            <ImageView
                android:id="@+id/imagetakeout"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/takein"
                android:src="@drawable/airplane_takein" />

            <TextView
                android:id="@+id/takeout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/takein"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@+id/imagetakeout"
                android:text="Vueling 17/10/2015 20:10"
                android:textColor="#404040"
                android:textSize="@dimen/text_size" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/purchase_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp"
                android:layout_weight=".50"
                android:background="@drawable/buttonselector"
                android:onClick="btnConfirm"
                android:text="Confirm"
                android:textColor="?android:attr/textColorPrimaryInverse" />

            <Button
                android:id="@+id/purchase_cancel"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card"
                android:layout_gravity="end|center_horizontal"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/purchase_button"
                android:layout_weight=".50"
                android:background="@drawable/buttonselector"
                android:onClick="btnCancel"
                android:text="Cancel"
                android:textColor="?android:attr/textColorPrimaryInverse" />
        </LinearLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="wearable.hotelbeds.traveler.nav.FragmentDrawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>