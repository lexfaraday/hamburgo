<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotelsCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:id="@+id/hotelRelative">


        <HorizontalScrollView
            android:id="@+id/hotelImages"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hotelImagesLineal">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

        <include
            android:id="@+id/flightsCardView"
            layout="@layout/flight_item"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@id/hotelRelative"
            />

</android.support.v7.widget.CardView>
